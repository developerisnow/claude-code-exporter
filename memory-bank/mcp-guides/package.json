{
  "name": "@claude-exporter/mcp-server",
  "version": "1.0.0",
  "description": "MCP server for Claude Code Exporter - Export, aggregate, and analyze Claude conversations",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "claude-exporter-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "claude",
    "exporter",
    "ai",
    "conversation",
    "analysis",
    "model-context-protocol"
  ],
  "author": "developerisnow",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "sqlite3": "^5.1.6",
    "better-sqlite3": "^9.2.2",
    "zod": "^3.22.4",
    "date-fns": "^3.0.6",
    "glob": "^10.3.10",
    "minimatch": "^9.0.3",
    "chalk": "^5.3.0",
    "debug": "^4.3.4",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/better-sqlite3": "^7.6.8",
    "@types/debug": "^4.1.12",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "ts-jest": "^29.1.1",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "prettier": "^3.1.1"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/developerisnow/claude-code-exporter.git"
  },
  "bugs": {
    "url": "https://github.com/developerisnow/claude-code-exporter/issues"
  },
  "homepage": "https://github.com/developerisnow/claude-code-exporter#mcp-server"
}