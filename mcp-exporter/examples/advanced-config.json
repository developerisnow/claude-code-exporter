{
  "mcpServers": {
    "claude-code-exporter": {
      "command": "node",
      "args": ["/absolute/path/to/LLMs-claude-code-exporter/mcp-exporter/index.js"],
      "env": {
        "CLAUDE_HOME": "/Users/username/.claude",
        "MCP_LOG_LEVEL": "DEBUG",
        "MCP_DEBUG": "true"
      }
    },
    "claude-code-exporter-production": {
      "command": "node", 
      "args": ["/absolute/path/to/LLMs-claude-code-exporter/mcp-exporter/index.js"],
      "env": {
        "CLAUDE_HOME": "/Users/username/.claude",
        "MCP_LOG_LEVEL": "ERROR",
        "MCP_DEBUG": "false"
      }
    }
  }
}